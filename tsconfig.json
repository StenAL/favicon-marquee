{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "lib": [
            "ES2021",
            "DOM",
            "WebWorker"
        ],
        "module": "ES2022",
        "target": "ES2022",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "lib",
        "declaration": true,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ]
}
